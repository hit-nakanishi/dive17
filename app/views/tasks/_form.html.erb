<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline, {} %>
  </div>

  <div class="field">
    <%= f.label :charge %><br>
    <%= f.text_field :charge, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit '登録', class: 'btn btn-primary' %>
  </div>
<% end %>
